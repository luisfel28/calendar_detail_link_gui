<mvc:View controllerName="com.fidelidademundial.zrefxcustreport.controller.relat"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="">
            <!-- <ScrollContainer  width="100%" horizontal="true" vertical="false" focusable="false"> -->
					<HBox class="sapUiSmallMarginTop sapUiSmallMarginBottom">
						<VBox width="100%">
								<FlexBox alignItems="Center" justifyContent="Start" class="sapUiSmallMarginBegin">
									<Title text="{i18n>title}" class="Titulo" />
									<ToolbarSpacer/>
								</FlexBox>
						</VBox>
						<VBox>
								<FlexBox alignItems="Center" justifyContent="Start">
									<Label text="Empresa" class="sapUiSmallMarginEnd"/>
									<MultiComboBox
										selectionChange="handleCompanyChange"
										class="sapUiSmallMarginEnd"
										width="200px"
										showSecondaryValues= "true"
										selectedKeys="FS01,FIIS"
										items="{
											path: 'main>/I_CompanyCode',
											sorter: { path: 'CompanyCode' }
										}">
										<core:ListItem key="{main>CompanyCode}" text="{main>CompanyCode}" additionalText="{main>CompanyCodeName}"/>
									</MultiComboBox>
									<Label text="Unidade Economica" class="sapUiSmallMarginEnd"/>
									<MultiComboBox
										selectionChange="handleUnidadesChange"
										width="200px"
										items="{
											path: 'main>/zsh_swenr',
											sorter: { path: 'swenr' }
										}">
										<core:ListItem key="{main>swenr}" text="{main>swenr}"/>
									</MultiComboBox>									
									<Label text="Data de LanÃ§amento" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
									<DateRangeSelection
										id="cboDtLanc"
										width="200px"
										value= "{
											'type': 'sap.ui.model.type.DateInterval',
											'formatOptions': {
												'pattern': 'dd/MM/yyyy'
											},
											'parts': [
												{
													'type': 'sap.ui.model.type.Date',
													'path': '/dtini'
												},
												{
													'type': 'sap.ui.model.type.Date',
													'path': '/dtfim'
												}
											]
										}"
										change="handleChange"/>									
									<Button text="Procurar" press="OnSearch" design="Emphasized" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"></Button>		
									<!-- <Button text="Teste" press="handleDetails" design="Emphasized" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"></Button>		 -->
								</FlexBox>
						</VBox>
					</HBox>
        <content>
			<t:Table id="TabReport" fixedColumnCount="4" visibleRowCount="16" alternateRowColors="true" width="auto" selectionMode="Single" selectionBehavior="RowOnly" showNoData="false">
<!-- 				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="{i18n>title}" level="H2"/>
							<ToolbarSpacer />
							<Label text="Empresa" />
							<MultiComboBox
								selectionChange="handleCompanyChange"
								width="300px"
								showSecondaryValues= "true"
								selectedKeys="FS01,FIIS"
								items="{
									path: 'main>/I_CompanyCode',
									sorter: { path: 'CompanyCode' }
								}">
								<core:ListItem key="{main>CompanyCode}" text="{main>CompanyCode}" additionalText="{main>CompanyCodeName}"/>
							</MultiComboBox>
							<Button text="Procurar" press="OnSearch" design="Emphasized"></Button>				
						</content>
					</OverflowToolbar>
				</headerToolbar>  -->
			</t:Table>
			<!-- </ScrollContainer> -->
        </content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
<!-- 					<ObjectHeader
					number="{
						parts:[{path:'Price'},{path:'CurrencyCode'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}"
					numberUnit="{CurrencyCode}"
						>
				</ObjectHeader> -->
				<Title text="Total:" level="H4" />
				<ObjectNumber
					id="TxtTotal"
					number="{
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false, decimalSeparator: ',', groupingSeparator: '.'}
					}"
					state="Warning" />				
			</Toolbar>
		</footer>			
    </Page>
</mvc:View>
