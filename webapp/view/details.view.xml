					</t:Column>
				</t:columns>
			</t:Table> -->
        </content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
<!-- 					<ObjectHeader
					number="{
						parts:[{path:'Price'},{path:'CurrencyCode'}],
